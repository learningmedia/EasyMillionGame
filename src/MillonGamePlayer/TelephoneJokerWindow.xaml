<Window 
    x:Class="MillionGamePlayer.TelephoneJokerWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Telefonjoker" 
    Height="300" 
    Width="300" 
    ResizeMode="NoResize" 
    Loaded="Window_Loaded"
    Background="#FF001523"
    >
    <Grid>
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*" />
                <RowDefinition Height="7*" />                
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Name="tb_question" Text="Hallo?" Margin="0, 15, 0, 0" Foreground="WhiteSmoke" FontWeight="Bold" FontSize="24" HorizontalAlignment="Center" Visibility="Hidden" />
            <TextBlock Grid.Row="1" Name="tb_answer" Text="Answer" Margin="0, 15, 0, 0" Foreground="WhiteSmoke" FontWeight="Normal" FontSize="18" HorizontalAlignment="Stretch" Visibility="Hidden" FontStyle="Italic" TextWrapping="Wrap"/>
        </Grid>
    </Grid>
</Window>
